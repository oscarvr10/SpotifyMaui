<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SpotifyMaui"
             x:Class="SpotifyMaui.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="PrimaryColor">#512bdf</Color>
            <Color x:Key="SecondaryColor">White</Color>

            <Style x:Key="BaseStyle"  TargetType="Element">                
                <Setter Property="Shell.TitleColor"
                        Value="White" />
                <Setter Property="Shell.BackgroundColor"
                        Value="Black" />
                <Setter Property="Shell.NavBarIsVisible"
                        Value="False" />
                <Setter Property="Shell.UnselectedColor"
                        Value="LightGrey" />
            </Style>

            <Style BasedOn="{StaticResource BaseStyle}" TargetType="TabBar" />
            
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="CircularSpotifyTxT-Med" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource SecondaryColor}" />
                <Setter Property="FontFamily" Value="CircularSpotifyTxT-Me" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
